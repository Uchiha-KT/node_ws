extends layout

block content


    div(id="page-wrapper")
      div(class="row")
        div(class="col-lg-12")
          h1(class="page-header") Dashboard

      div(class="row")
        div(class="col-lg-12")
          div(class="panel panel-default")
            div(class="panel-heading") DataTables Advanced Tables
            div(class="panel-body")
              table(width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example")
                thead
                  tr
                    th NIM
                    th Nama
                    th(width="200px") Aksi
                tbody
                  for row, index in data
                    tr
                      td #{row.nim}
                      td #{row.nama}
                      td.text-center
                        p <a href="tes/detail/#{row.nim}" class="btn btn-success btn-xs">Detail</a>
                          <a href="tes/edit/#{row.nim}" class="btn btn-warning btn-xs">Edit</a>
                          <a href="tes/hapus/#{row.nim}" class="btn btn-danger btn-xs">Hapus</a>
